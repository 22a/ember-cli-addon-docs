<div class="docs-viewer__nav-header">
  {{#link-to 'index' class='docs-viewer__nav-header-project-link'}}
    <span class='docs-viewer__nav-header-project-logo'>
      {{docs-logo logo=addonLogo}}
    </span>

    {{addonTitle}}
  {{/link-to}}

  <div class="docs-viewer__nav-header-links">
    <a href={{releasesUrl}} class='docs-viewer__nav-header-link'>
      v{{packageJson.version}}
    </a>

  </div>

  {{docs-viewer/x-search}}
</div>

<div class="docs-viewer__nav-list-wrapper">
  {{#docs-viewer/x-nav-list}}
    {{yield (hash
      item=(component 'docs-viewer/x-nav-item')
      subnav=(component 'docs-viewer/x-nav-list')
    )}}

    {{!-- Autogenerated API docs --}}
    {{docs-viewer/x-nav-item 'API Reference' 'docs.api.index'}}

    {{#docs-viewer/x-nav-list as |subnav|}}
      {{#each-in project.navigationIndex as |type items|}}
        <li class="docs-viewer__type-heading">
          {{capitalize type}}
        </li>

        {{#docs-viewer/x-nav-list as |subnav|}}
          {{#if (is-array items)}}
            {{#each items as |item|}}
              {{subnav.item item.name 'docs.api.item' item.path}}
            {{/each}}
          {{else}}
            {{#each-in items as |module items|}}
              <li class="docs-viewer__module-heading">
                {{module}}
              </li>

              {{#docs-viewer/x-nav-list as |subnav|}}
                {{#each items as |item|}}
                  {{subnav.item item.name 'docs.api.item' item.path}}
                {{/each}}
              {{/docs-viewer/x-nav-list}}
            {{/each-in}}
          {{/if}}
        {{/docs-viewer/x-nav-list}}
      {{/each-in}}
    {{/docs-viewer/x-nav-list}}
  {{/docs-viewer/x-nav-list}}
</div>

<div class='docs-viewer__nav-footer'>
  <div>
    <a href={{packageJson.repository}} class='docs-viewer__nav-footer-link'>
      {{svg-jar 'github' width=28 height=28}}
    </a>
  </div>
  <div>
    <p class='docs-viewer__nav-footer-powered-by'>Powered by
      <a class='docs-viewer__nav-footer-powered-by-link' href="https://github.com/ember-learn/ember-cli-addon-docs">
        AddonDocs
      </a>
    </p>
  </div>
</div>
